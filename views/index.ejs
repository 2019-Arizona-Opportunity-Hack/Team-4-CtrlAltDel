<div id="homepage" :class="[heroHeightSet ? '' : 'uninitialized']" v-cloak>
  <div class="hero d-flex flex-column justify-content-center" full-page-hero>
    <div class="container text-center">
      <div class="hero-image">
        <img class="sky" alt="The sky above the ocean" src="/images/hero-sky.png"/>
        <img class="cloud cloud-1" alt="A grayish-blue cloud" src="/images/hero-cloud.png"/>
        <img class="cloud cloud-2" alt="Another grayish-blue cloud" src="/images/hero-cloud.png"/>
        <img class="ship" alt="A ship hovering a few feet over the surface of the water, bearing a flagpole with the Sails.js logo" src="/logo.png"/>
        <img class="water" alt="The shadow of the floating ship on the water" src="/images/hero-water.png"/>
      </div>
      <h1 class="display-4"> <strong>SafeSpace</strong> </h1>
      <div>
        <div class="more-info-text" @click="clickHeroButton()">
          <div class="text">Learn More</div>
          <div class="icon">&darr;</div>
        </div>
      </div>
    </div>
  </div>
  <div class="about-wrapper" role="scroll-destination">
        <center><img class="ctrlLogo" alt="logo" src="/images/ctrlLogo.png" style=' width:40%; padding:100px; left-margin: auto; right-margin: auto; '/></center>
      <div class="features text-center">
        <div class="row">
          <div class="feature mb-4 mb-sm-0 col-sm">
            <div class="icon">
              <i class="fa fa-home"></i>
            </div>
            <h4>Housing</h4>
            <p class="text-muted"> Don't be afraid, we can help find a safe place to rest away from any danger</p>
          </div>
          <div class="feature pt-4 pt-sm-0 mb-4 mb-sm-0 col-sm">
            <div class="icon">
              <i class="fa fa-car"></i>
            </div>
            <h4>Transportation</h4>
            <p class="text-muted">Request a ride to remove yourself from an unsafe situation</p>
          </div>
          <div class="feature pt-4 pt-sm-0 col-sm">
            <div class="icon">
              <i class="fa fa-truck"></i>
            </div>
            <h4>Moving</h4>
            <p class="text-muted">Escape a hostile environment, we can help with the moving process</p>
          </div>
        </div>
        <a class="btn btn-outline-info mt-5" href="/aboutUs"> Mission Statement </a>
      </div>
    </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
